<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="407dp"
        android:layout_height="731dp"
        android:layout_marginStart="1dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp">

        <EditText
            android:id="@+id/fill1"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:background="@color/gray1"
            android:ems="10"
            android:hint="Name"
            android:paddingLeft="4pt"
            android:paddingRight="4pt"
            android:inputType="textEmailAddress"
            android:text=""
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.026" />

        <EditText
            android:id="@+id/fill2"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@color/gray1"
            android:ems="10"
            android:hint="Birthday"
            android:paddingLeft="4pt"
            android:paddingRight="4pt"
            android:inputType="date"
            android:text=""
            app:cornerRadius="30dp"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fill1"
            app:layout_constraintVertical_bias="0.053" />

        <EditText
            android:id="@+id/fill3"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@color/gray1"
            android:ems="10"
            android:hint="Phone number"
            android:paddingLeft="4pt"
            android:paddingRight="4pt"
            android:inputType="textEmailAddress"
            android:text=""
            app:cornerRadius="30dp"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fill2"
            app:layout_constraintVertical_bias="0.053" />

        <TextView
            android:id="@+id/gender_text"
            android:layout_width="290dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Gender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fill3" />

        <RadioGroup
            android:id="@+id/gender_select"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gender_text">

            <RadioButton
                android:id="@+id/gender_male"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="Male" />

            <RadioButton
                android:id="@+id/gender_female"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Female" />
        </RadioGroup>

        <TextView
            android:id="@+id/target_text"
            android:layout_width="290dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Target"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gender_select" />

        <RadioGroup
            android:id="@+id/target_select"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/target_text">

            <RadioButton
                android:id="@+id/target_level1"
                android:layout_width="122dp"
                android:layout_height="30dp"
                android:text="Level 1 - 490" />

            <RadioButton
                android:id="@+id/target_level2"
                android:layout_width="122dp"
                android:layout_height="30dp"
                android:text="Level 2 - 750" />

            <RadioButton
                android:id="@+id/target_level3"
                android:layout_width="122dp"
                android:layout_height="30dp"
                android:text="Level 3 - 990" />
        </RadioGroup>

        <Button
            android:id="@+id/btnUpdate"
            style="@style/MyButton"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="Update"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.451"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/target_select"
            app:layout_constraintVertical_bias="0.036" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>